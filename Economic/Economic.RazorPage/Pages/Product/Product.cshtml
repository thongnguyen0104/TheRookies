@page "/product"
@model Economic.RazorPage.Pages.Product.ProductModel

@{
    ViewData["Title"] = "Product";
}

<!-- featured categories -->
<div class="categories">
    <div class="small-container">
        <h2 class="title">Loại sản phẩm</h2>
        <div class="row">
        @foreach (var item in Model._homeViewModels.ProductTypes)
        {
            <div class="col-4" style="background-color: lightpink">
                <a asp-page="Producttypes" asp-route-id="@item.Id">
                    <h4 style="text-align: center; font-size: 18px; line-height: 26px; height: 26px">@item.Name</h4>
                </a>
            </div>
        }
        </div>
    </div>
</div>

<!-- featured products -->
<div class="small-container">
    <!-- Lastest Products -->
    <h2 id="local" class="title">Sản phẩm mới nhất</h2>
    <div class="row">
        @foreach (var item in Model._homeViewModels.Products)
        {
            <div class="col-4">
                <a asp-page="Productdetail" asp-route-id="@item.Id">
                    @if (item.ProductImages.Count() == 0)
                    {
                        <img src="/public/img/cart.png" alt="product">
                    }
                    else
                    {
                        <img src="@item.ProductImages[0].ProductPath" alt="product">
                    }
                    @*<img src="~/public/img/products/@item.ProductImages[0].ProductPath" alt="product">*@
                    <h4>@item.Name</h4>
                    <div class="rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                    </div>
                    <span style="color: #999; font-size: 13px; text-decoration: line-through;">@(item.Price*110/100)</span>
                    <p style="color: #e4270e;">@item.Price</p>
                </a>
            </div>
        }

    </div>

</div>

<!-- offer -->
